extends layout 

block content
    .w3-card-4
        header.w3-container.w3-blue-gray
            h1 Modificar Notas

        form.w3-container(action="./modificarNotas" method="POST")
            each aluno in uc.alunos.sort()
                - var alunoNotas = uc.notas.find(nota => nota.aluno === aluno)
                fieldset.w3-light-gray.w3-margin-top
                    .w3-section
                        label.w3-text-black(style="font-weight: bold;") ID da Aluno: 
                        |  #{aluno}  

                    .w3-section
                        label.w3-text-black(style="font-weight: bold;") Nota do projeto:  
                        input.w3-input.w3-border(name=`notaProjeto-${aluno}` id=`notaProjeto-${aluno}` placeholder="Insira a nota do projeto" value=alunoNotas ? alunoNotas.projeto : "")

                    .w3-section
                        label.w3-text-black(style="font-weight: bold;") Nota do teste:  
                        input.w3-input.w3-border(name=`notaTeste-${aluno}` id=`notaTeste-${aluno}` placeholder="Insira a nota do teste" value=alunoNotas ? alunoNotas.teste : "")

                    .w3-section
                        label.w3-text-black(style="font-weight: bold;") Nota do exame:  
                        input.w3-input.w3-border(name=`notaExame-${aluno}` id=`notaExame-${aluno}` placeholder="Insira a nota do exame" value=alunoNotas ? alunoNotas.exame : "")
                        
            button.w3-button.w3-blue-gray.w3-margin-top.w3-margin-bottom(type="submit") Submeter 

            a(href="/ucs/"+idUC+'/docente/'+idAluno)
                button.w3-button.w3-blue-gray.w3-margin-left.w3-margin-bottom.w3-margin-top.w3-margin Voltar

        footer.w3-container.w3-blue-gray
            h4.w3-center WhiteBoard, Jun 2024 - Powered by 
                a(href="https://www.w3schools.com/w3css/default.asp") w3.css
