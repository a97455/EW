extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Informações da UC

        .w3-margin-left
            h2
                b Sobre a UC:

        .w3-container.w3-margin-bottom.w3-margin-top
            ul.w3-ul.w3-border.w3-margin-bottom
                li.w3-light-gray
                    b Nome da UC:
                    | #{uc._id}
                li.w3-light-gray
                    b Docentes:
                    ul 
                        each docente in professores
                            li= docente

                li.w3-light-gray
                    b Horários Teóricos:
                    ul
                        each horario in uc.horario.teoricas
                            li= horario

                li.w3-light-gray
                    b Horários Práticos:
                    ul
                        each horario in uc.horario.praticas
                            li= horario

                li.w3-light-gray
                    b Avaliação:
                    ul
                        each avaliacao in uc.avaliacao
                            li= avaliacao 

        .w3-margin-left 
            h2 
                b Aulas:

        .w3-container.w3-margin-bottom.w3-margin-top
            each aula in uc.aulas.sort((a, b) => new Date(b.data) - new Date(a.data))
                ul.w3-ul.w3-border.w3-margin-bottom
                    li.w3-light-gray
                        b Tipo:
                        | #{aula.tipo}
                    li.w3-light-gray
                        b Data:
                        | #{aula.data}
                    li.w3-light-gray
                        b Sumário:
                        ul
                            each linha in aula.sumario
                                li= linha 

        .w3-container
            button.w3-button.w3-teal.w3-margin-left.w3-margin-bottom(type='button', onclick=`window.location.href='/paginaInicial/${uc._id}'`) Voltar
            
    footer.w3-container.w3-teal
        h4 WhiteBoard - #{data}
