extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue-gray
            h1= title
            img.w3-margin-bottom.w3-margin-top(src="http://localhost:10000/filestore/"+user.foto alt="Perfil" class="w3-image" style="width:40px; height:40px;")

        .w3-container 
            h2
                b Unidades Curriculares:
            ul.w3-ul.w3-hoverable.w3-light-gray.w3-margin-bottom
                each uc in lista 
                    li
                        if aluno
                            a.w3-button.w3-block(href="/ucs/" + uc._id + "/aluno/"+ user._id) #{uc.titulo} (#{uc._id})
                        else
                            a.w3-button.w3-block(href="/ucs/" + uc._id + "/docente/"+ user._id) #{uc.titulo} (#{uc._id})

        footer.w3-container.w3-blue-gray
            h4.w3-center WhiteBoard, Jun 2024 - Powered by 
                a(href="https://www.w3schools.com/w3css/default.asp") w3.css